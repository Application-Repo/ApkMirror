<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/image_transitione</item>
        <item name="android:windowSharedElementExitTransition">@transition/image_transitione</item>
        <item name="android:textColorPrimary">?android:attr/textColorPrimaryNoDisable</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TransulentNavigationBar" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="ProgressStyleDark" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:colorBackground">@color/element_color_dark</item>
        <item name="android:windowTitleStyle">@style/TitleDark</item>
        <item name="android:windowBackground">@color/element_color_dark</item>
    </style>

    <style name="TitleDark" parent="android:Widget">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextDark</item>
    </style>

    <style name="TextDark" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProgressStyleLight">

    </style>

</resources>
